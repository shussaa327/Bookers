<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<!-- 繰り返し処理 -->
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "show", book_path(book) %></td>
		<td><%= link_to "edit", edit_book_path(book) %></td>
		<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>
	<!-- 繰り返し処理終了 -->
</table>
<!-- 新規投稿フォーム -->
<h1>New book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
  	<h2><%= @book.errors.count %> erros prohibited this book from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit "create Book" %>
<% end %>

