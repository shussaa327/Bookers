<div class = "books bookers-content">
	<div class = "index">
		<% if flash[:notice] %>
			<div class = "flash">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div class = "index-title">
			<h2>Books</h2>
		</div>
		<div class = "index-items">
			<table>
				<tr align = "center">
					<th>Title</th>
					<th>Body</th>
					<th></th>
				</tr>
				<!-- 繰り返し処理 -->
				<% @books.each do |book| %>
					<tr>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td>
							<%= link_to "Show", book_path(book), class: "index-link" %>
							<%= link_to "Edit", edit_book_path(book),class: "index-link" %>
							<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?", class: "index-link" %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
	<!-- 新規投稿フォーム -->
	<div class = "new">
		<div class = "new-title">
			<h3>New book</h3>
		</div>
		<div class = "new-items">
			<% if @book.errors.any? %>
			  <div class="error_explanation">
			  	<p><%= @book.errors.count %> erros prohibited this book from being saved:</p>
			  	<div class ="erro_messages">
				    <% @book.errors.full_messages.each do |message| %>
				    <li><%= message %></li>
				    <% end %>
				</div>
			  </div>
			<% end %>

			<%= form_for(@book) do |f| %>
				<div class = "new-title-form form">
					<p>Title</p>
					<%= f.text_field :title %>
				</div>
				<div class = "new-body-form form">
					<p>Body</p>
					<%= f.text_area :body %>
				</div>
				<%= f.submit "create Book" %>
			<% end %>
		</div>
	</div>
</div>
